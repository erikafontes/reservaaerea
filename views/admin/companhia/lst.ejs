<%- include('../cabecalho.ejs') %>

<h1>Companhias Aéreas</h1>
<div class="form-container">
    <table>
        <label for="pesquisar">Pesquisar:</label>
<input type="text" id="pesquisar" placeholder="Digite para filtrar...">

        <!-- Cabeçalho da tabela -->
        <thead>
            <tr>
                <th>Nome</th>
                <th>País</th>
                <th>Foto</th>
                <th>Ações</th>
            </tr>
        </thead>
        <!-- Corpo da tabela -->
        <tbody>
            <% companhia.forEach(function(companhia){ %>
            <tr>
                <td><%= companhia.nome %></td>
                <td><%= companhia.pais %></td>
               
                <td><img src="/arquivos/<%= companhia.foto%>" class="Imenor" width="50%" height="50%"/>
                <td>
                    <a href="/admin/companhia/edt/<%= companhia.id %>" class="btn edit">
                        <i class="fas fa-edit"></i>&nbsp;Editar
                    </a>
                    <a href="/admin/companhia/del/<%= companhia.id %>" class="delete-btn">
                        <i class="fas fa-trash"></i>&nbsp;Excluir
                    </a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Links para adicionar, editar ou desligar -->
    <a href="/admin/companhia/add" class="btn add">Adicionar Companhias</a>
</div>

</body>
</html>
