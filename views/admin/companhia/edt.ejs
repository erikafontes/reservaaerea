<%-include('../cabecalho.ejs') %>

    <!DOCTYPE html>


    <html lang="pt-br">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Editar Informações da Companhia Aérea</title>

        <link rel="stylesheet" href="/css/style.css">

    </head>

    <body>
        <div class="form-box">
            <h1>Editar Informações da Companhia Aérea</h1>
            <form enctype="multipart/form-data" method="post">
                <label for="nome">Nome</label>
                <input type="text" name="nome" id="nome" value="<%=companhia.nome%>"
                    placeholder="Digite o nome do aeroporto"><br>

                <label for="pais">País</label>
                <input type="text" name="pais" id="pais" value="<%=companhia.pais%>"
                    placeholder="Digite o país do aeroporto"><br>

                <label for="foto">Foto</label>
                <input type="file" name="foto" id="foto" value="<%=companhia.foto%>"><br>

                <img src="/arquivos/<%=companhia.foto%>">
            <!-- <label for=" foto">Foto</label> -->
                <!-- <input type="number" id="novo-peso" ><br> -->

                <button type="submit">Editar</button>
            </form>

            <div class="form-footer">
                <p>Voltar para a <a href="/admin/companhia/lst">Página Inicial</a></p>
            </div>
        </div>
    </body>

    </html>