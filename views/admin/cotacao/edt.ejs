
<%-include('../cabecalho.ejs') %>

<!DOCTYPE html>


<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Informações da Cotação</title>
   
    <link rel="stylesheet" href="/css/style.css">

</head>

<body>
    <div class="form-box">
        <h1>Editar Informações da cotação</h1>
        <label for="usuario">Nome</label>
        <select class="form-select"  id="usuario" name="usuario">
            <option value="" selected hidden>Selecione seu nome de usuario</option>
              <%usuarios.forEach(function(usuario){%>
                <option value='<%=usuario.id%>'></option><%=usuario.nome%></option>
             <%})%>
        </select>

        <label for="origem">Origem</label>
        <select class="form-select" id="origem" name="origem">
            <option value="" disabled selected hidden>Selecione seu local de Origem</option>
            <%aeroportos.forEach(function(aeroporto){%>

                <option value='<%=aeroporto.id%>'>
                    <%=aeroporto.nome%>
                </option>
                <%})%>
        </select>


        <label for="destino">Destino</label>
        <select class="form-select" id="destino" name="destino">
            <option value="" disabled selected hidden>Selecione seu local de destino</option>

            <%aeroportos.forEach(function(aeroporto){%>

                <option value='<%=aeroporto.id%>'>
                    <%=aeroporto.nome%>
                </option>
                <%})%>
        </select>

        <label for="ida">Data de ida</label>
        <input type="date" id="ida">

        <label for="volta">Data de volta</label>
        <input type="date" id="volta">

        <label for="status">Status</label>
        <select id="status" name="status">
          <option value="em_processo">Em processo</option>
          <option value="aprovado">Aprovado</option>
        </select>
      
            <!-- <label for="foto">Foto</label> -->
            <!-- <input type="number" id="novo-peso" ><br> -->

            <button type="submit">Editar</button>
        </form>

        <div class="form-footer">
            <p>Voltar para a <a href="/admin/cotacao/lst">Cotações</a></p>
        </div>
    </div>
</body>

</html>